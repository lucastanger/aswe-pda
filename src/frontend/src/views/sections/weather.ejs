<section class="snap-box box-5" data-index="5">
    <div class="h-full flex flex-col justify-center items-center rounded-2xl">
        <div class="w-auto py-7 px-5 flex flex-col justify-center items-center">
            <h1 class="text-5xl text-gray-300 mb-8">
                Choose your location and temperature unit
            </h1>
            <div class="flex flex-col justify-center items-center">
                <button id="location" class="bg-gray-100 mb-6 w-56 h-14 text-gray-300 flex flex-row justify-center items-center rounded-2xl text-gray-900 outline-none">
                    Use my current location
                </button>
                <p id = "status"></p>
                <a id="map-link" target="_blank"></a>
                <div class="block">
                    <div class="mt-2">
                        <div>
                            <label class="inline-flex items-center">
                                <input type="radio" class="form-radio text-turquoise-400" name="radio" value="1" checked>
                                <span class="ml-2 text-gray-300">Celsius - °C</span>
                            </label>
                        </div>
                        <div>
                            <label class="inline-flex items-center">
                                <input type="radio" class="form-radio text-turquoise-400" name="radio" value="2">
                                <span class="ml-2 text-gray-300">Fahrenheit - °F</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
